@model IEnumerable<Task1.Models.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="pull-left">
            <h2 class="page-title">
                Employee <small>Details</small>
            </h2>
        </div>
        <div class="pull-right">
            <h2 class="page-title">
                <div class="btn-group">
                    <a href="@Url.Action("Create", "Employees")" class="btn btn-success">
                        <i class="fa fa-plus"></i> &nbsp; <span>Add New</span>
                    </a>
                </div>
            </h2>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-body">
            <div class="row">
                <table class="table">
                    <tr>
                        <th style="text-align:center">
                            Sl.No
                        </th>
                        <th style="text-align:center">
                            ENo
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Department
                        </th>
                        <th>
                            Contact
                        </th>
                        <th>
                            Email
                        </th>
                        <th style="text-align:center">
                            Status
                        </th>
                        <th style="text-align:center">
                            Action
                        </th>
                    </tr>
                    @{ int i = 1;}
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center">
                                @i
                            </td>
                            <td style="text-align:center">
                                @Html.DisplayFor(modelItem => item.eno)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ename)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.edept)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.econtact)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.eemail)
                            </td>

                            <td style="text-align:center">
                                <button class="@( item.estatus == 1 ? "label label-success" : "label label-danger" )">
                                    @( item.estatus == 1 ? "Active" : "InActive" )
                                </button>
                            </td>

                            <td style="text-align:center">
                                <a href="@Url.Action("Details", "Employees", new { id = item.eid})" class="btn btn-info" title="View Employee Details">
                                    <i class="fa fa-search"></i>
                                </a>
                                <a href="@Url.Action("Edit", "Employees", new { id = item.eid })" class="btn btn-warning" title="Edit Employee Details">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="@Url.Action("Delete", "Employees", new { id = item.eid})" class="btn btn-danger" title="Delete Employee">
                                    <i class="fa fa-trash-o"></i>
                                </a>
                                <a href="@Url.Action("Index", "EmployeeAddresses", new { id = item.eid})" class="btn btn-info" title="View Employee Address">
                                    <i class="fa fa-building-o"></i>
                                </a>
                                <a href="@Url.Action("Create", "EmployeeAddresses", new { id = item.eid})" class="btn btn-success" title="Add Employee Address">
                                    <i class="fa fa-plus"></i>
                                </a>
                            </td>
                        </tr>
                        i++;
                    }

                </table>
            </div>
        </div>
    </div>
</div>